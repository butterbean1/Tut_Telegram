<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_image"
        android:layout_width="@dimen/toolbar_image_width"
        android:layout_height="@dimen/toolbar_image_height"
        android:layout_marginStart="@dimen/app_small_margin"
        android:src="@drawable/def_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbar_fullname"
        style="@style/normalText"
        app:layout_constraintStart_toEndOf="@id/toolbar_image"
        app:layout_constraintTop_toTopOf="@id/toolbar_image"
        tools:text="@string/def_full_name"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/contact_status"
        style="@style/smallText"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toEndOf="@id/toolbar_image"
        app:layout_constraintTop_toBottomOf="@id/toolbar_fullname"
        tools:text="@string/def_status" />
</androidx.constraintlayout.widget.ConstraintLayout>